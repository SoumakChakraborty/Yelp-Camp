<html>
<head>
    <title>
        YelpCamp
    </title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    <link rel="icon" href="https://img.icons8.com/color/2x/camping-tent.png">
    <link href="https://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet">
    </head>
    <body>
        <div id="navbar">
            <div id="navtitle">
                    <a href="/" id="navpro">YelpCamp</a>
            </div> 
            <div id="navbar-buttons">
            <% if(state=="not logged in") {%>          
              <a href="/signin" id="navlogin">Sign In</a>
              <a href="/signup" id="navsign">Sign Up</a>
              <%}else {%>
                <div id="usernamediv">
                    <a id="username" href="#"><%=username%></a>
                 </div>
                <%}%> 
           </div>
     </div>
     <div id="showlist1">   
        <li class="userlist" id="top"><a href="#">Edit profile</a></li>
        <li class="userlist" id="middle"><a href="#">Change password</a></li>
        <li class="userlist navlogout" id="bottom"><a href="/signout">Sign Out</a></li>
    </div>
             <div id="together"> 
                <div id="showlist">
                 <p>Yelp Camp</p>            
                 <ul>
                     <li id="first" class="active listitem">Category 1</li>
                     <li class="listitem">Category 2</li>
                     <li id="last" class="listitem">Category 3</li>
                 </ul>
                </div>
                 <div id="showimg1">
                 <img src="<%=campres[0].URL%>" id="Yelpimg1">
                 <p class="Name"><a href="#" id="showname"><%=campres[0].Name%></a></p>
                 <p class="Name"><%=campres[0].Description%></p>
                <%if(username==campres[0].user){%> 
                 <div id="manipulate">    
                 <a href="/campground/<%=campres[0].Name%>/Update" id="editcamp">Edit campground</a>
                 </div>
                 <form action="/campground/<%=campres[0].Name%>/Update?_method=PUT" method="POST" id="deleteform">
                  <input type="submit" value="Delete campground" id="delete"> 
                 </form>
                 <%}%>
                </div>
              </div>
                <div id="comments">
                <a href="/campground/<%=campres[0].Name%>/comment" id="addcom">Comment</a>
                <%for(var i=0;i<commentres.length;i++){%>
                        <p><%=commentres[i].uname%> - <%=commentres[i].Comment%></p>
                    <%if(username==commentres[i].uname){%> 
                       <div id="editcomment">     
                        <a href="/campground/<%=commentres[i].commentID%>/commentUpdate" id="editcom">Edit comment</a>
                      </div> 
                      <form action="/campground/<%=commentres[i].commentID%>/commentdelete?_method=DELETE" method="POST">
                        <input type="submit" value="Delete comment" id="deletecom"> 
                      </form>
                    <%}%>  
                <%}%>  
                </div>
                <script src="/Script.js"></script> 
                <a href="/campground" id="goback">Go back</a>
<% include partials/footer %>     